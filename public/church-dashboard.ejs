<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Church Dashboard - SoulVibes</title>
    <link href="https://fonts.googleapis.com/css2?family=Great_Vibes&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.css">
</head>
<body>
    <div class="container">
        <nav class="main-nav">
            <a href="/" class="nav-link">Home</a>
            <a href="/church/dashboard" class="nav-link active">Dashboard</a>
            <a href="#" class="nav-link" id="logout-btn">Logout</a>
        </nav>

        <h1 class="title animate__animated animate__fadeIn">Church Dashboard</h1>
        <div class="dashboard-container animate__animated animate__fadeIn">
            <!-- Overview Cards -->
            <div class="dashboard-overview">
                <div class="dashboard-card animate__animated animate__fadeInUp" style="animation-delay: 0.1s">
                    <h3>Total Members</h3>
                    <div id="total-members" class="stat-value">0</div>
                </div>
                <div class="dashboard-card animate__animated animate__fadeInUp" style="animation-delay: 0.2s">
                    <h3>Active Members</h3>
                    <div id="active-members" class="stat-value">0</div>
                </div>
                <div class="dashboard-card animate__animated animate__fadeInUp" style="animation-delay: 0.3s">
                    <h3>Average Soul Score</h3>
                    <div id="avg-soul-score" class="stat-value">0</div>
                </div>
                <div class="dashboard-card animate__animated animate__fadeInUp" style="animation-delay: 0.4s">
                    <h3>Quiz Completion Rate</h3>
                    <div id="completion-rate" class="stat-value">0%</div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="dashboard-charts">
                <!-- Soul Distribution Chart -->
                <div class="chart-card animate__animated animate__fadeInUp" style="animation-delay: 0.5s">
                    <h3>Soul Distribution</h3>
                    <canvas id="soul-distribution-chart"></canvas>
                </div>

                <!-- Growth Trends Chart -->
                <div class="chart-card animate__animated animate__fadeInUp" style="animation-delay: 0.6s">
                    <h3>Growth Trends</h3>
                    <canvas id="growth-trends-chart"></canvas>
                </div>

                <!-- Member Engagement Chart -->
                <div class="chart-card animate__animated animate__fadeInUp" style="animation-delay: 0.7s">
                    <h3>Member Engagement</h3>
                    <canvas id="engagement-chart"></canvas>
                </div>
            </div>

            <!-- Member List -->
            <div class="member-list animate__animated animate__fadeInUp" style="animation-delay: 0.8s">
                <h3>Recent Members</h3>
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Join Date</th>
                                <th>Last Quiz</th>
                                <th>Soul Score</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody id="member-list-body">
                            <!-- Member rows will be populated dynamically -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <audio id="clickSound" src="/sounds/click.mp3" preload="auto"></audio>
    <audio id="transitionSound" src="/sounds/transition.mp3" preload="auto"></audio>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.0/dist/chart.min.js"></script>
    <script src="/js/church-dashboard.js"></script>
</body>
</html> 